@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    if (Roles.IsUserInRole("Customer"))
    {
        Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
    }
    else if (this.User.IsInRole("Employee"))
    {
        Layout = "~/Views/Shared/_LayoutEmployee.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}